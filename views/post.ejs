<div class="md:mt-4 mt-10">
  <% if (typeof category !== "undefined") { %>
  <h1 class="md:text-2xl text-xl font-bold text-center"
    >Posts under <%=category.toUpperCase() %> category (<%=data.length%> )</h1
  >
  <% if (typeof data !== "undefined") { %>
  <section class="">
    <div class="py-6 px-4 mx-auto max-w-screen-xl lg:py-10 lg:px-6">
      <div class="text-center lg:mb-16 mb-8">
        <div class="grid gap-10 lg:grid-cols-2">
          <%-include("./components/blogCard.ejs", {data:data}); %>
        </div>
      </div>
    </div>
  </section>
  <% } %> <% } if (typeof post !== "undefined") { %>

  <div><%=post.title%></div>

  <%}%>
</div>
