<%- include("./partials/header.ejs") %> <%- include("./partials/error.ejs") %>
<%- include("./partials/authUser.ejs") %>

<h1 class="md:text-2xl text-xl font-bold text-center uppercase">Log In</h1>
<div class="w-full md:flex justify-center">
  <div
    class="md:mt-4 md:mt-10 mt-3 md:mx-20 bg-white p-10 shadow-lg pb-20 md:w-1/2"
  >
    <form class="relative" action="/auth/login" method="POST">
      <div class="w-full grid">
        <label for="">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="bg-gray-200 rounded p-1"
        />
      </div>
      <div class="w-full grid">
        <label for="">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="bg-gray-200 rounded p-1"
        />
      </div>
      <button
        type="submit"
        class="bg-gray-600 text-white mt-6 p-1 px-10 absolute left-0"
      >
        Login
      </button>
    </form>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
